<h1>コメント新規作成ページ</h1>

<%= form_for(@comment) do |f| %>

  <%= f.label :image, '写真' %>
  <%= f.file_field :image %>
  
  <%= f.label :image_date, '撮影日時' %>
  <%= f.date_field :image_date %>
  
  <%= f.label :content, '写真補足' %>
  <%= f.text_field :content %>

  <%#= f.hidden_field :place_id, value: @place.id %>
  <%#= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit '投稿' %>
<% end %>

